<div class="container">
  <% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-md-4">
        <div id="posts_list">
          <h5><%= link_to post.title, post_path(post) %></h5>
          <%= image_tag(post.image.url(:large)) %>
        </div>
      </div>
      <div class="col-md-8">
        <p><%= post.post_content %></p>
      </div>
    </div>
  <% end %>
  <% end %>
</div>

<% if current_user %>
  <%= link_to "New post", new_post_path, class: "btn btn-info" %>
<% end %>
