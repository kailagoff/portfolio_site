<div id="blog-show">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @post.image.url(:large) %>
    </div>
    <div class="col-md-8">
      <h3><%= @post.title %></h3>
      <p><%= @post.post_content %></p>
    </div>
  </div>
</div>

<% if current_user %>
 <h4><%= link_to "Add a comment", new_post_comment_path(@post), remote: true %></h4>
<% else %>
 <p><%= link_to "Sign in to add a comment.", new_user_session_path %></p>
<% end %>

<div id="comments">
  <% if @post.comments.any? %>
    <% if current_user %>
      <% @post.comments.each do |comment| %>
      <%= comment.author %> <%= comment.comment_content %>
      <%= link_to "Delete", post_comment_path(@post, comment),
        :data => {:confirm => "Are you sure you want to delete this comment?",
        :method => "delete"} %></p>
    <% end %>
    <% else %>
      <% @post.comments.each do |comment| %>
        <%= comment.author %> <%= comment.comment_content %>
      <% end %>
    <% end %>
  <% end %>
</div>

<p><%= link_to "Edit post", edit_post_path %></p>
<p><%= link_to "Delete post", post_path(@post), :data => {:confirm => "Are you sure you want to delete this post?", :method => "delete"} %></p>
